<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Typing Practice</title>
    <link rel="icon" href="./logo.png" type="image/png">
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css"
    rel="stylesheet"
/>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background-color: #0c0c0c;
            color: #ffffff;
            transition: background-color 0.3s, color 0.3s;
        }
        body.light-theme {
            background-color: #ffffff;
            color: #000000;
        }
        h1 {
            color: #f4dab9;
        }
        .light-theme h1 {
            color: #000000;
        }
        #alphabetStats {
            min-height: 5vh;
            background-color: #1f1f1f;
            padding: 10px;
            border-radius: 8px;
            overflow: hidden;
            white-space: nowrap;
            overflow-x: auto;
        }
        .light-theme #alphabetStats {
            border: 1px solid #8f8f8f;
            background-color: #d8d8d8;
            color: #000000;
        }
        #typingArea {
            width: 100%;
            height: 38vh;
            background-color: #1f1f1f;
            color: #ffffff;
            padding: 10px;
            border-radius: 8px;
            resize: none;
            outline: none;
        }
        .light-theme #typingArea {
            background-color: #d8d8d8;
            border: 1px solid #8f8f8f;
            color: #000000;
        
        }
        .light-theme #typingArea::placeholder{
            color: #1f1f1f;
        }
        #resetBtn {
            background-color: #333333;
            color: #ffffff;
            padding: 10px 20px;
            border-radius: 8px;
            margin: 10px 5px;
            cursor: pointer;
        }
        .light-theme #resetBtn {
            background-color: #0011ff;
            color: #ffffff;
        }
        #alphabetStats span {
            display: inline-block;
            margin-right: 10px;
        }
        h2 {
            color: #ff0f73; 
        }
        .light-theme h2 {
            color: #00114b;
        }
        #result {
            min-height: 5vh;
            margin-top: 20px;
            background-color: #1f1f1f;
            padding: 10px;
            border-radius: 8px;
        }
        .light-theme #result {
            border: 1px solid #8f8f8f;
            background-color: #d8d8d8;
            color: #000000;
        }
        #themeSwitcher {
            display: flex;
            align-items: center;
            justify-content: center;
            position: absolute;
            top: 20px;
            right: 20px;
            background-color: #333333;
            color: #ffffff;
            padding: 10px;
            border-radius: 8px;
            cursor: pointer;
            height: 40px;
            width: 40px;
        }
        .light-theme #themeSwitcher {
            background-color: #000000;
            color: #ffffff;
        }
        </style>
</head>
<body>
    <div id="themeSwitcher"><i class="ri-sun-fill"></i></div>
    <div class="container mx-auto p-8">
        <h1 class="text-3xl mb-4">Typing Practice</h1>
        <textarea id="typingArea" class="mt-2" placeholder="Start typing here..."></textarea>
        <div class="mt-4">
            <button id="resetBtn">Reset</button>
        </div>
        <h2 class="text-2xl mt-6">Count Details:</h2>
        <div id="result" class="mt-4"></div>
        <h2 class="text-2xl mt-6 text-white">Alphabet Usage:</h2>
        <div id="alphabetStats" class="mt-3"></div>
    </div>

    <script>
        const typingArea = document.getElementById('typingArea');
        const resetBtn = document.getElementById('resetBtn');
        const result = document.getElementById('result');
        const alphabetStats = document.getElementById('alphabetStats');
        const themeSwitcher = document.getElementById('themeSwitcher');

        let backspaceCount = 0;
        let deleteCount = 0;
        let arrowCounts = { up: 0, down: 0, left: 0, right: 0 };
        let alphabetCount = {};

        typingArea.addEventListener('keydown', (e) => {
            const key = e.key.toLowerCase();
            if (key === 'backspace') {
                backspaceCount++;
            } else if (key === 'delete') {
                deleteCount++;
            } else if (key === 'arrowup') {
                arrowCounts.up++;
            } else if (key === 'arrowdown') {
                arrowCounts.down++;
            } else if (key === 'arrowleft') {
                arrowCounts.left++;
            } else if (key === 'arrowright') {
                arrowCounts.right++;
            } else if (/[a-z]/.test(key)) {
                alphabetCount[key] = (alphabetCount[key] || 0) + 1;
            }
            updateAlphabetStats();
        });

        function updateAlphabetStats() {
            let alphabetArray = Array.from('abcdefghijklmnopqrstuvwxyz');
            let alphabetDictionary = alphabetArray.reduce((acc, letter) => {
                if (alphabetCount[letter] > 0) {
                    acc[letter] = alphabetCount[letter];
                }
                return acc;
            }, {});
            
            alphabetStats.innerHTML = Object.keys(alphabetDictionary).map(key => `<span>${key.toUpperCase()}: ${alphabetDictionary[key]}</span>`).join('');

            result.innerHTML = `
                ${backspaceCount ? `<p>Backspace : ${backspaceCount}</p>` : ''}
                ${deleteCount ? `<p>Delete : ${deleteCount}</p>` : ''}
                ${arrowCounts.up ? `<p>Up Arrow : ${arrowCounts.up}</p>` : ''}
                ${arrowCounts.down ? `<p>Down Arrow : ${arrowCounts.down}</p>` : ''}
                ${arrowCounts.left ? `<p>Left Arrow : ${arrowCounts.left}</p>` : ''}
                ${arrowCounts.right ? `<p>Right Arrow : ${arrowCounts.right}</p>` : ''}
            `;
        }

        resetBtn.addEventListener('click', () => {
            typingArea.value = '';
            typingArea.disabled = false;
            result.innerHTML = '';
            alphabetCount = {};
            backspaceCount = 0;
            deleteCount = 0;
            arrowCounts = { up: 0, down: 0, left: 0, right: 0 };
            updateAlphabetStats();
        });

        themeSwitcher.addEventListener('click', () => {
            document.body.classList.toggle('light-theme');
            if(themeSwitcher.innerHTML==='<i class="ri-sun-fill"></i>'){
                themeSwitcher.innerHTML='<i class="ri-moon-fill"></i>'
            }
            else{
                themeSwitcher.innerHTML='<i class="ri-sun-fill"></i>'
            }
        });
    </script>
</body>
</html>
